        {
          "name": "Get Vendors",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/vendors"
          }
        },
        {
          "name": "Create Vendor",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Vendor A\",\n  \"email\": \"vendor@example.com\"\n}"
            },
            "url": "{{baseUrl}}/vendors"
          }
        }
      ]
    },
    {
      "name": "Loyalty Program Forms",
