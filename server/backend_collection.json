          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/forms/:id"
          }
        },
        {
          "name": "Create Form",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"vendorId\": \"<vendor_id>\",\n  \"formData\": { \"field1\": \"value1\" }\n}"
